<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Zamówienie</h1>  <%= link_to 'Powrót', orders_path, class: "btn btn-default btn-xs" %>

  <table class="table table-striped table-bordered">
    <thead>
    <tr>
      <th>Imię</th>
      <th>Nazwisko</th>
      <th>Email</th>
      <th>Telefon</th>
      <th>Data seansu</th>
      <th>Film</th>
      <th>Sala</th>
      <th>Miejsca</th>
      <th>Zaplacono</th>
      <th colspan="2">Akcje</th>
    </tr>
    </thead>

    <tbody>
        <tr>
          <td><%= @order.name %></td>
          <td><%= @order.surname %></td>
          <td><%= @order.email %></td>
          <td><%= @order.phone %></td>
          <td><%= format_datatime(@order.seance.start_date) %></td>
          <td><%= @order.seance.movie.title %></td>
          <td><%= @order.seance.room.name %></td>
          <td><%= @order.seatings.count %></td>
          <td><% if @order.paid %>TAK<% else %>NIE<% end %></td>
          <td class="text-center">
            <% if @order.paid == false %>
              <%= form_for(@order, :method => :put, :html => {:'data-type' => 'json'}) do |f| %>
                  <%= f.hidden_field :paid, value: true, class: "seating-status" %>
                  <%= submit_tag "Opłacono", class: "btn btn-danger btn-xs", data: { confirm: 'Are you sure?' } %>
              <% end %>
            <% end %>
          </td>
          <td class="text-center"><%= link_to 'Usuń', @order, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
        </tr>
    </tbody>
  </table>

  <div class="col-xs-6" id="cms-tickets-payment">
    <h4 class="cms-payments-title">Menadżer biletów: <a class="cms-payments-title-first-a">Wybrano: </a><a id="dom5" >0</a><a> / </a><a id="dom0"><%= @order.seatings.count %></a></h4>
    <div class="cs-tickets-managment" >
      <div class="col-xs-5 form-group">
        <label for="dom1">Typ biletu:</label>
        <%= select_tag :ticket_id, options_for_select(Ticket.all.map {|x| [x.name, x.id]}),  class: 'cs-type-of-tickets form-control', id: 'dom1' %>
      </div>
      <div class="col-xs-4 form-group">
        <label for="dom2">Ilość:</label>
        <%= select_tag :how_many_tickets, options_for_select((1..@order.seatings.count)), class: 'cs-how-many-tickets form-control', id: 'dom2' %>
      </div>
      <button id="dom3" class="col-xs-3 btn btn-default">Dodaj</button>
    </div>
    <div class="cs-tickets-results" id="dom4">
    </div>
  </div>

</div>


