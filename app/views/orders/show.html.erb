<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Zamówienie</h1>
  <table class="table table-striped table-bordered">
    <thead>
    <tr>
      <th>Imię</th>
      <th>Nazwisko</th>
      <th>Email</th>
      <th>Telefon</th>
      <th>Data seansu</th>
      <th>Film</th>
      <th>Sala</th>
      <th>Zaplacono</th>
      <th colspan="2">Akcje</th>
    </tr>
    </thead>

    <tbody>
        <tr>
          <td><%= @order.name %></td>
          <td><%= @order.surname %></td>
          <td><%= @order.email %></td>
          <td><%= @order.phone %></td>
          <td><%= @order.seance.start_date %></td>
          <td><%= @order.seance.movie.title %></td>
          <td><%= @order.seance.room.name %></td>
          <td><% if @order.paid %>TAK<% else %>NIE<% end %></td>
          <td class="text-center">
            <% if @order.paid == false %>
              <%= form_for(@order, :method => :put, :html => {:'data-type' => 'json'}) do |f| %>
                  <%= f.hidden_field :paid, value: true,class: "seating-status" %>
                  <%= submit_tag "Opłacono", class: "btn btn-danger btn-xs", data: { confirm: 'Are you sure?' } %>
              <% end %>
            <% end %>
          </td>
          <td class="text-center"><%= link_to 'Usuń', @order, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
        </tr>
    </tbody>
  </table>

  <h3>Bilety</h3>
  <table class="table table-striped table-bordered">
    <thead>
    <tr>
      <th>Typ</th>
      <th>Ilość</th>
      <th>Cena za sztukę</th>
      <th>Suma</th>
    </tr>
    </thead>

    <tbody>
    <% (1..Ticket.count).each do |x| %>
    <% ticket = @tickets.where(id: x)  %>
    <% if ticket.count != 0 %>
        <tr>
          <td><%= ticket.last.name %></td>
          <td><%= tmp = ticket.count %></td>
          <td><%= ticket.last.price %></td>
          <td><% @price += ticket.last.price * tmp %><%= ticket.last.price * tmp %></td>
        </tr>
    <% end %>
    <% end %>
        <tr>
          <td>Suma całkowita</td>
          <td colspan="2"><%= @tickets.count %></td>
          <td><%= @price %></td>
        </tr>
    </tbody>
  </table>

  <%= link_to 'Powrót', orders_path, class: "btn btn-default btn-xs" %>
</div>


