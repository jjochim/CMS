<div class="container">

  <h1>Zamówienia</h1>
  <div class="search-form">
    <%= search_form_for @search do |f| %>
        <%= f.label :name_or_surname_cont, 'Imię lub nazwisko:' %>
        <%= f.text_field :name_or_surname_cont %>
        <%= f.submit value: 'Szukaj' %>
    <% end %>
  </div>
  <table class="table table-striped table-bordered">
    <thead>
    <tr>
      <th colspan="10" class="text-center not-paid">
        <h4 class="not-paid-title"><b>Rezerwacje</b></h4>
      </th>
    </tr>
    <tr>
      <th>Imię</th>
      <th>Nazwisko</th>
      <th>Email</th>
      <th>Telefon</th>
      <th>Data seansu</th>
      <th>Film</th>
      <th>Sala</th>
      <th colspan="3">Akcje</th>
    </tr>
    </thead>

    <tbody>
    <% @orders.each do |order| %>
        <tr>
          <td><%= order.name %></td>
          <td><%= order.surname %></td>
          <td><%= order.email %></td>
          <td><%= order.phone %></td>
          <td><%= format_datatime(order.seance.start_date) %></td>
          <td><%= order.seance.movie.title %></td>
          <td><%= order.seance.room.name %></td>
          <td class="text-right"><%= link_to 'Szczególy', order, class: "btn btn-default btn-xs" %>
            <%= link_to 'Usuń', order, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
        </tr>
    <% end %>
    </tbody>

    <thead>
    <tr>
      <th colspan="10" class="text-center not-paid">
        <h4 class="not-paid-title"><b>Opłacone</b></h4>
      </th>
    </tr>
    <tr>
      <th>Imię</th>
      <th>Nazwisko</th>
      <th>Email</th>
      <th>Telefon</th>
      <th>Data seansu</th>
      <th>Film</th>
      <th>Sala</th>
      <th colspan="3">Akcje</th>
    </tr>
    </thead>

    <tbody>
    <% @paid_orders.each do |order| %>
        <tr>
          <td><%= order.name %></td>
          <td><%= order.surname %></td>
          <td><%= order.email %></td>
          <td><%= order.phone %></td>
          <td><%= format_datatime(order.seance.start_date) %></td>
          <td><%= order.seance.movie.title %></td>
          <td><%= order.seance.room.name %></td>
          <td class="text-right"><%= link_to 'Szczególy', order, class: "btn btn-default btn-xs" %>
            <%= link_to 'Usuń', order, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>