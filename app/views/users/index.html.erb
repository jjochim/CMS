<div class="panel panel-default">
  <div class="panel-heading">
    <h2 style="margin-top: 0px; margin-bottom: 0px;">Konta</h2>
    <%= link_to new_user_path, class: "btn btn-success admin_new" do %>
        Nowy
    <% end %>
  </div>
  <div class="panel-body">
    <table class="table table-striped table-bordered">
      <thead>
      <tr>
        <th>Imie</th>
        <th>Nazwisko</th>
        <th>Rola</th>
        <th colspan="3">Akcje</th>
      </tr>
      </thead>

      <tbody>
      <% @users.each_with_index do |user, idx| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.role %></td>
            <td class="text-right"><%= link_to 'Szczegóły', user_path(id: user), class: "btn btn-default btn-xs" %>
              <%= link_to 'Edit', edit_user_path(id: user), class: "btn btn-default btn-xs" %>
              <%= link_to 'Usuń', user_path(user), method: :delete, data: { confirm: 'Czy na pewno chcesz usunąć' }, class: "btn btn-danger btn-xs" unless idx == 0 %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="panel-footer"></div>
</div>
