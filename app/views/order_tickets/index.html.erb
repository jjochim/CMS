<p id="notice"><%= notice %></p>

<h1>Order Tickets</h1>

<table>
  <thead>
    <tr>
      <th>Order</th>
      <th>Ticked</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_tickets.each do |order_ticket| %>
      <tr>
        <td><%= order_ticket.order_id %></td>
        <td><%= order_ticket.ticked_id %></td>
        <td><%= link_to 'Show', order_ticket %></td>
        <td><%= link_to 'Edit', edit_order_ticket_path(order_ticket) %></td>
        <td><%= link_to 'Destroy', order_ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

