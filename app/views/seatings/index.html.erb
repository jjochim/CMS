<p id="notice"><%= notice %></p>

<h1>Seatings</h1>

<table>
  <thead>
    <tr>
      <th>Slot</th>
      <th>Room</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @seatings.each do |seating| %>
      <tr>
        <td><%= seating.slot %></td>
        <td><%= seating.room_id %></td>
        <td><%= link_to 'Show', seating %></td>
        <td><%= link_to 'Edit', edit_seating_path(seating) %></td>
        <td><%= link_to 'Destroy', seating, method: :delete, data: { confirm: 'Czy na pewno chcesz usunąć' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Seating', new_seating_path %>
