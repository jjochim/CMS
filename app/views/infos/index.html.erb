<legend>Kontakt</legend>
<p><%= @info.description %></p>
<div class="col-md-6">
  <iframe src="<%= @src %>" width="600" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
</div>
<div class="col-md-6 text-center">
  <div style="margin-left: 10%;">
    <legend class="inf-legend"><h5>Dane kontaktowe</h5></legend>
    <div>
      ul. <%= @info.street %> <%= @info.building_number %><br>
      <%= @info.zip_code %> <%= @info.city %><br>
      tel. <%= @info.phone %><br>
      <%= @info.email %>
    </div>
    <legend class="inf-legend"><h5>Godziny otwarcia</h5></legend>
    <div>
      <table style="margin: 0 auto;">
        <tbody>
        <tr>
          <td style="text-align: right;"><b>Poniedziałek:</b></td>
          <td>
            <%= format_time(@info.start_mon) %>
          </td>
          <td>
            <%= format_time(@info.end_mon) %>
          </td>
        </tr>
        <tr>
          <td style="text-align: right;"><b>Wtorek:</b></td>
          <td>
            <%= format_time(@info.start_tue) %>
          </td>
          <td>
            <%= format_time(@info.end_tue) %>
          </td>
        </tr>
        <tr>
          <td style="text-align: right;"><b>Środa:</b></td>
          <td>
            <%= format_time(@info.start_wed) %>
          </td>
          <td>
            <%= format_time(@info.end_wed) %>
          </td>
        </tr>
        <tr>
          <td style="text-align: right;"><b>Czwartek:</b></td>
          <td>
            <%= format_time(@info.start_thu) %>
          </td>
          <td>
            <%= format_time(@info.end_thu) %>
          </td>
        </tr>
        <tr>
          <td style="text-align: right;"><b>Piątek:</b></td>
          <td>
            <%= format_time(@info.start_fri) %>
          </td>
          <td>
            <%= format_time(@info.end_fri) %>
          </td>
        </tr>
        <tr>
          <td style="text-align: right;"><b>Sobota:</b></td>
          <td>
            <%= format_time(@info.start_sat) %>
          </td>
          <td>
            <%= format_time(@info.end_sat) %>
          </td>
        </tr>
        <tr>
          <td style="text-align: right;"><b>Niedziela:</b></td>
          <td>
            <%= format_time(@info.start_sun) %>
          </td>
          <td>
            <%= format_time(@info.end_sun) %>
          </td>
        </tr>
        </tbody>
      </table>
      <legend class="inf-legend"><h5>Cennik</h5></legend>
      <table style="margin: 0 auto;">
        <thead>
        <tr>
          <th style="text-align: right; padding-right: 5px;">Nazwa</th>
          <th style="padding-left: 5px;">Cena</th>
        </tr>
        </thead>

        <tbody>
        <% @tickets.each do |ticket| %>
            <tr>
              <td style="text-align: right;"><%= ticket.name %>:</td>
              <td><%= ticket.price %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<script>
    $(document).ready(function(e) {
      if (screen.width <= 1024){
          $('.inf-legend').css("width", "55%");
          $('.inf-legend').css("margin", "0px auto");
          alert("test");
      };
    });
</script>
