<div class="cms-login">
  <h2>Logowanie</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, placeholder: "Login", class: 'form-control input-lg cms-login-imput' %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", placeholder: "HasÅ‚o", class: 'form-control input-lg cms-login-imput' %>
      </div>

      <div class="actions">
        <%= f.submit "Log in", value: 'Zaloguj', class: 'cms-login-submit' %>
      </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>