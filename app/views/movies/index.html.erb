<p id="notice"><%= notice %></p>

<h1>Movies</h1>

<div class="carousel_test slick regular slick-dotted">
  <div><%= image_tag(@movies.last.picture) %></div>
  <div><%= image_tag(@movies.last.picture) %></div>
  <div><%= image_tag(@movies.last.picture) %></div>
  <div><%= image_tag(@movies.last.picture) %></div>
</div>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Duration</th>
      <th>Genre</th>
      <th>Pegi</th>
      <th>Description</th>
      <th>Director</th>
      <th>Actors</th>
      <th>Country</th>
      <th>Language</th>
      <th>Premiere</th>
      <th>Url trailer</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.duration %></td>
        <td><%= movie.genre %></td>
        <td><%= movie.pegi %></td>
        <td><%= movie.description %></td>
        <td><%= movie.director %></td>
        <td><%= movie.actors %></td>
        <td><%= movie.country %></td>
        <td><%= movie.language %></td>
        <td><%= movie.premiere %></td>
        <td><%= movie.url_trailer %></td>
        <td><%= movie.picture %></td>
        <td><%= link_to 'Show', movie %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

